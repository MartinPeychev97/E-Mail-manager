@model EmailIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="blueTable">
    <thead>
        <tr>
            <th>№</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Body</th>
            <th>Receive Date</th>
            <th>Status</th>
            <th>Attachments</th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td colspan="8">
                <div class="links">
                    <a href="#">&laquo;</a>
                    <a class="active" href="#">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#">4</a>
                    <a href="#">&raquo;</a>
                </div>
            </td>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var email in Model.Emails)
        {
        <tr>
            <td>@email.Id</td>
            <td>@email.Sender</td>
            <td>@email.Subject</td>
            <td>@email.Body</td>
            <td>@email.ReceiveDate</td>
            <td>@email.EnumStatus</td>
            <td>@email.HasAttachments</td>
            <td>
                <form asp-route-id="@email.Id" asp-action="Detail" asp-controller="Email" method="post">
                    <button type="submit" class="btn btn-lg btn-info">Details</button>
                </form>
            </td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
