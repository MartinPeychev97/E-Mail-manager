@using EmailManager.Models.UserViewModel;
@model UserIndexModel

@{
    ViewData["Title"] = "Index";
}

@{
    ViewBag.Title = "User Index";
}
<h3>Users</h3>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Full Name</th>
            <th>Member Since</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model.Users)
        {
            <tr>
                <td class="nav-link">
                    <div>
                        <a asp-action="Detail" asp-controller="User" asp-route-userId="@user.Id">
                            <p>@Html.DisplayFor(modelItem => user.Id)</p>
                        </a>
                    </div>
                </td>
                <td>@user.Name</td>
                <td>@user.InitialRegistration</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

